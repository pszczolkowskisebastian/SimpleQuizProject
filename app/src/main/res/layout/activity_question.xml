<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <TextView
            android:text="Quiz title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quizTitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizTitle"
            app:srcCompat="@drawable/placeholder_320"
            android:id="@+id/questionPicture" />

    <TextView
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQuestion"
        android:layout_below="@id/questionPicture"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuestion"
        android:indeterminate="false"
        android:progress="0"
        android:max="6"
        android:id="@+id/progressBar" />

    <TextView
        android:text="Progress 1/6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarInfo"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarInfo"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="Answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer1"
            android:layout_weight="1" />

        <RadioButton
            android:text="Answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer2"
            android:layout_weight="1" />

        <RadioButton
            android:text="Answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer3"
            android:layout_weight="1" />

        <RadioButton
            android:text="Answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer4"
            android:layout_weight="1" />

        <RadioButton
            android:text="Answer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer5"
            android:layout_weight="1" />

        <RadioButton
            android:text="Answer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAnswer6"
            android:layout_weight="1" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/radioGroup">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button"
            android:id="@+id/Button"/>
    </FrameLayout>

</RelativeLayout>